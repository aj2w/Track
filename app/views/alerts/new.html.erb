<%= form_for @alert do |f| %>
<%= f.label "Which line?" %>
<%= f.collection_select :train_id, Train.all, :id, :name %><br>

<%= f.label :time_to_send, "Time to receive message" %><br />
<%= time_select 'alert', 'time_to_send', {:minute_step => 15, :ampm => true, :ignore_date => true} %>

<%= f.hidden_field :user_id, :value => current_user.id %>

<%= f.submit "Submit" -%>
<% end %>