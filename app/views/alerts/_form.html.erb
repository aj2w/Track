<%= form_for @alert do |f| %>
<%= f.label "Which line?" %>
<%= f.collection_select :train_id, Train.all, :id, :name %>

<%= f.label :time_to_send, "Time to receive message" %>
<%= time_select 'alert', 'time_to_send', {:minute_step => 15, :ampm => true, :ignore_date => true} %>

<% if user_signed_in? %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<% end %>

<%= f.submit "Submit" -%>
<% end %>