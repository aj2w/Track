<div class="form-holder">

<%= form_for @alert, :html => {:class => "form-inline"} do |f| %>


<%= f.text_field :name, :placeholder => "Alert name", :type => "text" %>


&nbsp;

<%= f.label :time_to_send, "When?", {:class => "welcome-alert-form lato"} %>
<%= time_select 'alert', 'time_to_send', {:minute_step => 15, :ampm => true, :ignore_date => true} %>

&nbsp;

<%= f.label "Train?", {:class => "welcome-alert-form lato"} %>
<%= f.collection_select :train_id, Train.all, :id, :name, {}, {:class => "narrow"} %>

&nbsp;

<%= f.label "Recurring?", {:class => "welcome-alert-form lato"} %>
<%= f.select :recurring, [['Yes', true], ['No', false]], {}, :class => "alert_recurring" %>

<div class="days-form">
<%= f.label "Monday", {:class => "welcome-alert-form lato"} %>
<%= f.check_box :monday %>
<%= f.label "Tuesday", {:class => "welcome-alert-form lato"} %>
<%= f.check_box :tuesday %>
<%= f.label "Wednesday", {:class => "welcome-alert-form lato"} %>
<%= f.check_box :wednesday %>
<%= f.label "Thursday", {:class => "welcome-alert-form lato"} %>
<%= f.check_box :thursday %>
<%= f.label "Friday", {:class => "welcome-alert-form lato"} %>
<%= f.check_box :friday %>
<%= f.label "Saturday", {:class => "welcome-alert-form lato"} %>
<%= f.check_box :saturday %>
<%= f.label "Sunday", {:class => "welcome-alert-form lato"} %>
<%= f.check_box :sunday %>
</div>

<% if user_signed_in? %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<% end %>

&nbsp;
<%= f.submit "Submit", {:class => "btn btn-primary"} %>
<% end %>
</div>