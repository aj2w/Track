<%= form_for([@alert]) do |f| %>
<%= f.label "Train?", {:class => "welcome-alert-form lato"} %>
<%= f.collection_select :train_id, Train.all, :id, :name, {}, {:class => "narrow"} %>

&nbsp;&nbsp;&nbsp;

<%= f.label :time_to_send, "Receive update at?", {:class => "welcome-alert-form lato"} %>
<%= time_select 'alert', 'time_to_send', {:minute_step => 15, :ampm => true, :ignore_date => true} %>

<br>


<%= f.text_field :name, :placeholder => "Alert name (optional)" %>


<%= f.select :recurring, [['Recurring', true], ['One-Time', false]] %>

<% if user_signed_in? %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<% end %>


<%= f.submit "Submit", {:class => "btn btn-primary"} %>
<% end %>